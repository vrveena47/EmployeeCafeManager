using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Mvc.Filters;
using System.Text.Json;
using System.Text.RegularExpressions;

namespace CafeEmployeeManager.Server.API.Helpers
{
    public class JsonExceptionFilter : IExceptionFilter
    {
        public void OnException(ExceptionContext context)
        {
            if (context.Exception is JsonException jsonEx)
            {
                var errors = new Dictionary<string, string[]>();
                string fieldName = !string.IsNullOrEmpty(jsonEx.Path) ? jsonEx.Path : "unknown";
                if (fieldName.StartsWith("$.")) fieldName = fieldName.Substring(2);

                // Detect required field error from message
                if (jsonEx.Message.Contains("required", StringComparison.OrdinalIgnoreCase))
                {
                    errors[fieldName] = new[] { $"The {fieldName} field is required." };
                }
                else
                {
                    errors[fieldName] = new[] { "Field has invalid data format." };
                }

                context.Result = new BadRequestObjectResult(new
                {
                    message = "Validation failed for one or more fields.",
                    errors
                });

                context.ExceptionHandled = true;
            }
        }
    }
    }
